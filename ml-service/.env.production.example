# Production Environment Variables for Render Deployment
# Copy these to Render's environment variables section

# Server Configuration
FLASK_ENV=production
PYTHONUNBUFFERED=1

# GPU Configuration (Render free tier doesn't support GPU)
USE_GPU=false

# CORS - Replace with your actual Render API URL
CORS_ORIGINS=https://credibility-analyzer-api.onrender.com

# Gunicorn Configuration
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=120

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Prometheus Metrics
PROMETHEUS_ENABLED=true
